<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"

        tools:context="com.example.android.woerdendynamics.MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_size"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/title_image_width"
                android:layout_height="@dimen/title_image_height"
                android:background="@color/title_bar_color"
                android:src="@drawable/watto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_size"
                android:autoLink="map"
                android:background="@color/title_bar_color"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/title_bar_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pictures_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/droid_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:src="@drawable/drone" />

            <ImageView
                android:id="@+id/rosie_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:src="@drawable/rosie" />

            <ImageView
                android:id="@+id/runner_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"

                android:src="@drawable/running" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical"
            android:padding="@dimen/general_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/misson"
                android:textColor="@color/title_bar_color"
                android:textSize="@dimen/text_size_mision" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_frame_height"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/contact_frame_height"
                    android:src="@drawable/adres" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/contact_frame_height"
                    android:autoLink="map"
                    android:gravity="center"
                    android:text="@string/address"
                    android:textColor="@color/title_bar_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_frame_height"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/contact_frame_height"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/phone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/contact_frame_height"
                    android:autoLink="phone"
                    android:gravity="center"
                    android:text="@string/phone"
                    android:textColor="@color/title_bar_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_frame_height"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/contact_frame_height"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/mail" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/contact_frame_height"
                    android:autoLink="email"
                    android:gravity="center"
                    android:text="@string/email"
                    android:textColor="@color/title_bar_color" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

